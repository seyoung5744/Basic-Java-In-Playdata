package day09;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class IOExam04 {
	// 파일로부터 읽어서 파일에 쓰는 것을 구현해보세요.
	public static void main(String[] args) {
		try {
			fileCopy("src/day09/IOExam01.java", "test2.txt");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public static void fileCopy(String inputFile, String ouputFile) throws IOException {
		int bt;
		FileReader fr = new FileReader(inputFile);
		FileWriter fw = new FileWriter(ouputFile);

		try {
			while ((bt = fr.read()) != -1) {
				fw.write((char) bt);
			}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			fr.close();
			fw.close();
		}
	}
}