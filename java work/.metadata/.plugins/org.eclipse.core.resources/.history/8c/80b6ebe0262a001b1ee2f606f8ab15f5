package day04;

/*
	122pg 실습예제3
 */
public class Shape {
	private int x, y;
	
	public void setX(int x) { this.x = x; }
	public int getX() { return x; }
	
	public void setY(int y) { this.y = y; }
	public int getY() { return y; }
	
	public void show() {
		System.out.println("좌표 [ x=" + x + ",y=" + y + "]에 점을 그렸습니다.");
	}
	
	public void show(boolean visible) {
		if(visible) {
			this.show();
		}
	}
}
